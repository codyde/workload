{
  "name": "workload-node",
  "version": "0.0.1",
  "description": "Node.js version of workload server",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "build": "tsc",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "ts-node scripts/migrate.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^9.10.0",
    "@sentry/profiling-node": "^9.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.30.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.10.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.4.0",
    "drizzle-kit": "^0.30.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0",
    "supertest": "^6.3.4"
  }
}
